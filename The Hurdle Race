#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl "\n"
#define ll long long int
#define mod 1e6+7
using namespace std;
int main()
{
    fast;ll n,m;cin>>n>>m;
    ll a[n];
    for(ll i=0;i<n;i++) cin>>a[i];
    sort(a,a+n,greater<int>());
    if(m>=a[0])
    {
        cout<<0<<endl;
    }
    else {
       cout<<a[0]-m<<endl;
    }
    
}


